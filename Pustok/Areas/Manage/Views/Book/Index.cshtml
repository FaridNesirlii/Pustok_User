@using Pustok.Models
@using Pustok.Controllers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Book>


@{
    ViewData["Title"] = "Index";
    int count = 0;
}
<div class="container" style="display:flex;justify-content:space-between;align-items:center">
<h1>Book:</h1>
<a asp-action="create" asp-controller="book" class="btn btn-success" >Create</a>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">CostPrice</th>
      <th scope="col">SalePrice</th>
      <th scope="col">DiscountPrice</th>
      <th scope="col">Code</th>
      <th scope="col">Image</th>
      <th scope="col">Action</th>

    </tr>
  </thead>
  <tbody>
        @foreach (Book item in Model)
        {
        <tr>
          <th scope="row">@count</th>
          <td>@item.Name</td>
          <td>@item.CostPrice</td>
          <td>@item.SalePrice</td>
          <td>@item.DiscountPrice</td>
          <td>@item.Code</td>
          <td>
              <img style="width:150px" src="~/uploads/books/@item.Image">
          </td>

          <td>
                  <a asp-action="update" asp-controller="book" asp-route-id="@item.Id" class="btn btn-info" >Update</a>
                    <a asp-action="delete" asp-controller="book" asp-route-id="@item.Id" class="btn btn-danger item-delete">Delete</a>
           </td>
        </tr>
        }

  </tbody>
</table>
